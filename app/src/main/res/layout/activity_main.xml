<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.harris.bmi6.MainActivity">

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="weight"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="27dp" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="height"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/ed weight"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/ed weight" />

    <Button
        android:id="@+id/caculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/ed height"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/ed height" />

    <EditText
        android:id="@+id/ed weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView11"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView11" />

    <EditText
        android:id="@+id/ed height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/ed weight"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/ed weight" />
</android.support.constraint.ConstraintLayout>
